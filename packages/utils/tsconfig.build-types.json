{
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.cy.ts",
    "**/*.spec.ts",
    "**/__tests__/**/*",
    "dist"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": false,
    "noImplicitAny": true
  }
}